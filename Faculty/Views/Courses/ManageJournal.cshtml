
@{
    ViewBag.Title = "ManageJournal";
}

<h2>Manage @ViewBag.CourseName course Journal:</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>@Html.Label("User First Name")</th>
            <th>@Html.Label("User Last Name")</th>
            <th>@Html.Label("Mark")</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Mark</td>
                <td>@Html.ActionLink("Change Mark", "#", new { id = item.Id }, null) </td>
            </tr>
        }

    </tbody>
</table>