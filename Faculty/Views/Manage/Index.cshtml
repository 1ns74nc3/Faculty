@model Faculty.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>Manage your account</h2>

<h2 class="text-success">@ViewBag.StatusMessage</h2>
<hr />
<div class="user-profile">
    <div class="user-profile-container">
        <div>
            <img src="~/Content/user.svg" alt="Our courses" width="150" />
        </div>
        <div>
            <h4>@Html.LabelFor(u => u.FirstName):</h4>
            <p>
                @Html.DisplayFor(u => u.FirstName)
            </p>
        </div>
        <div>
            <h4>@Html.LabelFor(u => u.LastName):</h4>
            <p>
                @Html.DisplayFor(u => u.LastName)
            </p>
        </div>
        <div>
            <h4>@Html.LabelFor(u => u.Age):</h4>
            <p>
                @Html.DisplayFor(u => u.Age)
            </p>
        </div>
        <div>
            <h4>@Html.LabelFor(u => u.UserInfo):</h4>
            <p>
                @if (Model.UserInfo != null)
                {
                    @Html.DisplayFor(u => u.UserInfo)
                }
                else
                {
                    <span>None</span>
                }

            </p>
        </div>
    </div>
    <div class="user-profile-container">
        <div>
            <h3>@Html.ActionLink("View your courses", "DisplayUserCourses", new { userId = Model.UserId }, new { @class = "custom-links" })</h3>
        </div>
        <div>
            <h3>@Html.ActionLink("Edit your profile", "EditUserData", new { userId = Model.UserId }, new { @class = "custom-links" })</h3>
        </div>
        <div>
            <h3>
                @if (Model.HasPassword)
                {
                    @Html.ActionLink("Change your password", "ChangePassword", null, new { @class = "custom-links" })
                }
                else
                {
                    @Html.ActionLink("Set password", "SetPassword", null, new { @class = "custom-links" })
                }
            </h3>
        </div>
        @if (ViewBag.UserRole == "Lector")
        {
            <h3>@Html.Label("Lector functions:", new { @class = "lector" })</h3>
            <div>
                <h3>@Html.ActionLink("Manage courses", "DisplayCoursesForLector", new { userId = Model.UserId }, new { @class = "custom-links" })</h3>
            </div>
        }
        else if (ViewBag.UserRole == "Admin")
        {
            <h3>@Html.Label("Administrator functions:", new { @class = "admin" })</h3>
            <div>
                <h3>@Html.ActionLink("Admin Panel", "AdminPanel", "Admin", new { area = "Admin" }, new { @class = "custom-links" })</h3>
            </div>
        }
    </div>
</div>
