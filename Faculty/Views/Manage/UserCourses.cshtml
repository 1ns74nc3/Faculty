
@{
    ViewBag.Title = "UserCourses";
}

<h2>@ViewBag.User Courses</h2>

@if (ViewBag.Courses)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>@Html.Label("Course Name")</th>
                <th>@Html.Label("Start Date")</th>
                <th>@Html.Label("End Date")</th>
                <th>@Html.Label("Course Status")</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.CourseName</td>
                <td>@item.StartDate</td>
                <td>@item.EndDate</td>
                <td>@item.CourseStatus</td>
            </tr>
            }

        </tbody>
    </table>
}
else
{

    @Html.Label("You are not registered to any course!");

}
