@model  IEnumerable<Faculty.Logic.Models.ApplicationUser>
@{
    ViewBag.Title = "ManageJournal";
}

<h2>Manage @ViewBag.Course.CourseName course Journal:</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.Journals.First().Mark)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
            <td>@Html.DisplayFor(modelItem => item.LastName)</td>
            <td>@Html.DisplayFor(modelItem => item.Journals.First().Mark)</td>
            <td>@Html.ActionLink("Change Mark", "ManageUserMark", new { journalId = item.Journals.First().Id, courseId = ViewBag.Course.Id }) </td>
        </tr>
        }
    </tbody>
</table>