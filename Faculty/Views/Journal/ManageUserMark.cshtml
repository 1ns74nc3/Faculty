@model  Faculty.Logic.Models.Journal
@{
    ViewBag.Title = "ManageUserMark";
}

<h2>Set mark for @Model.Users.First().FirstName @Model.Users.First().LastName:</h2>


@using (Html.BeginForm("ManageUserMark", "Journal", new { courseId = ViewBag.CourseId, journalId = ViewBag.JournalId }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Mark, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Mark, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Mark, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="submit_button btn btn-default" />
        </div>
    </div>
}
<br />
<br />
<br />
@Html.ActionLink("Back", "ManageJournal", new { courseId = ViewBag.CourseId }, new { @class = "custom-links whole-page" })
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

