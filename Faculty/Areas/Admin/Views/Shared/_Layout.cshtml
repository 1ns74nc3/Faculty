<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - educAtive - learning platfor</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top admin-panel">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("educAtive", "Index", "Home", new { area = "" }, new { @class = "navbar-brand admin-header-links" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "admin-header-links" })</li>
                    <li>@Html.ActionLink("Admin Panel", "AdminPanel", "Admin", new { area = "Admin" }, new { @class = "admin-header-links" })</li>
                    <li>@Html.ActionLink("Courses", "DisplayCourses", "ManageCourses", new { Area = "Admin" }, new { @class = "admin-header-links" })</li>
                    <li>@Html.ActionLink("Users", "DisplayUsers", "ManageUsers", new { Area = "Admin" }, new { @class = "admin-header-links" })</li>
                    <li>@Html.ActionLink("Journals", "DisplayJournals", "ManageJournals", new { Area = "Admin" }, new { @class = "admin-header-links" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - educAtive - learning platform</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
