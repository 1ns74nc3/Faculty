@{
    ViewBag.Title = "Courses";
}

<h2>Courses</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>@Html.Label("Course Name")</th>
            <th>@Html.Label("Start Date")</th>
            <th>@Html.Label("End Date")</th>
            <th>@Html.Label("Course Status")</th>
            <th>@Html.Label("Theme")</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>@item.CourseName</td>
            <td>@item.StartDate</td>
            <td>@item.EndDate</td>
            <td>@item.CourseStatus</td>
            <td>@item.Theme</td>
            <td>@Html.ActionLink("Edit", "EditCourse", new { Area = "Admin", id = item.Id }) </td>
            <td>@Html.ActionLink("Delete", "DeleteCourse", new { Area = "Admin", id = item.Id }) </td>
        </tr>
        }
    </tbody>
</table>
<h2>@Html.ActionLink("Add new course", "AddCourse", new { Area = "Admin" }, null)</h2>
